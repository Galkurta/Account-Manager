<Window x:Class="RobloxAccountManager.Views.AddAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Roblox Account" Height="300" Width="500"
        Background="{StaticResource Brush.Background.Dark}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize">
    
    <Border BorderBrush="{StaticResource Brush.Border.Dark}" BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Add New Account" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- Username Input -->
            <TextBlock Grid.Row="1" Text="Account Name (Alias)" Margin="0,0,0,5"/>
            <TextBox Grid.Row="2" x:Name="TxtUsername" Padding="5" Margin="0,0,0,15" Background="{StaticResource Brush.Surface.Dark}" Foreground="White" BorderThickness="0"/>

            <!-- Cookie Input -->
            <TextBlock Grid.Row="3" Text=".ROBLOSECURITY Cookie" Margin="0,0,0,5"/>
            <TextBox Grid.Row="4" x:Name="TxtCookie" Padding="5" TextWrapping="Wrap" AcceptsReturn="True" 
                     Background="{StaticResource Brush.Surface.Dark}" Foreground="White" BorderThickness="0"
                     VerticalScrollBarVisibility="Auto"/>

            <!-- Buttons -->
            <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Cancel" Click="BtnCancel_Click" Background="{StaticResource Brush.Surface.Dark}" Margin="0,0,10,0" Width="80"/>
                <Button Content="Save" Click="BtnSave_Click" Width="80"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
