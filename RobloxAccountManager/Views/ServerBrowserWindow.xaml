<ui:FluentWindow x:Class="RobloxAccountManager.Views.ServerBrowserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:RobloxAccountManager.ViewModels"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="Server Browser" Height="650" Width="900"
        WindowStartupLocation="CenterOwner"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica"
        WindowCornerPreference="Round">
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- 0: Title -->
            <RowDefinition Height="Auto"/> <!-- 1: Inputs -->
            <RowDefinition Height="Auto"/> <!-- 2: Game Details -->
            <RowDefinition Height="*"/>    <!-- 3: List -->
            <RowDefinition Height="Auto"/> <!-- 4: Footer -->
        </Grid.RowDefinitions>

        <ui:TitleBar Title="Server Browser" Grid.Row="0"/>
        
        <TextBlock Text="Experimental Server Preview" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15" Visibility="Collapsed"/> <!-- Redundant with TitleBar -->

        <!-- Inputs & Filter Bar -->
        <ui:Card Grid.Row="1" Padding="10" Margin="0,0,0,15" VerticalAlignment="Stretch">
             <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="Place ID:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ui:TextBox Grid.Column="1" Text="{Binding PlaceId}" PlaceholderText="123456..."/>
                
                <ui:Button Grid.Column="2" Command="{Binding FetchServersCommand}" Content="Refresh" Margin="10,0,0,0" Width="80" Icon="{ui:SymbolIcon ArrowSync24}"/>
                
                <TextBlock Grid.Column="4" Text="{Binding StatusMessage}" Foreground="{DynamicResource TextFillColorSecondaryBrush}" VerticalAlignment="Center"/>
            </Grid>
        </ui:Card>

        <!-- Game Details Header -->
        <ui:Card Grid.Row="2" Padding="15" Margin="0,0,0,15"
                Visibility="{Binding HasGameDetails, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Game Icon -->
                <Border CornerRadius="8" ClipToBounds="True" Background="#111" VerticalAlignment="Top">
                    <Image Source="{Binding ThumbnailUrl}" Stretch="Uniform"/>
                </Border>

                <!-- Info -->
                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- Live Badge -->
                        <Border Background="#28a745" CornerRadius="4" Padding="6,2" Margin="0,0,8,0" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="6" Height="6" Fill="White" Margin="0,0,4,0"/>
                                <TextBlock Text="Live" Foreground="White" FontSize="10" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                        <TextBlock Text="{Binding GameTitle}" FontSize="20" FontWeight="Bold" TextTrimming="CharacterEllipsis"/>
                    </StackPanel>
                    
                    <TextBlock Text="{Binding GameCreator}" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,4,0,8"/>

                    <ScrollViewer MaxHeight="80" VerticalScrollBarVisibility="Auto" Margin="0,0,0,12" PanningMode="VerticalOnly">
                        <TextBlock Text="{Binding GameDescription}" Foreground="{DynamicResource TextFillColorSecondaryBrush}" 
                                   TextWrapping="Wrap" Opacity="0.8"/>
                    </ScrollViewer>

                    <!-- Stats Row -->
                    <StackPanel Orientation="Horizontal">
                        <!-- Playing -->
                        <ui:Card Padding="8,4" Margin="0,0,8,0">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="People24" FontSize="16" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding PlayingCount}" FontWeight="SemiBold"/>
                            </StackPanel>
                        </ui:Card>

                        <!-- Visits -->
                        <ui:Card Padding="8,4" Margin="0,0,8,0">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="Eye24" FontSize="16" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding VisitsCount}" FontWeight="SemiBold"/>
                            </StackPanel>
                        </ui:Card>

                         <!-- Likes/Favs -->
                        <ui:Card Padding="8,4">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="Heart24" FontSize="16" Margin="0,0,5,0" Foreground="#e74c3c"/>
                                <TextBlock Text="{Binding LikesCount}" FontWeight="SemiBold"/>
                            </StackPanel>
                        </ui:Card>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </ui:Card>

        <!-- Server List -->
        <DataGrid Grid.Row="3" ItemsSource="{Binding Servers}" SelectedItem="{Binding SelectedServer}"
                  AutoGenerateColumns="False" IsReadOnly="True" 
                  Background="Transparent" BorderThickness="0" 
                  HeadersVisibility="Column" GridLinesVisibility="None">
             <!-- Note: WPF UI Theme usually styles DataGrid automatically if ControlsDictionary is merged. 
                  We remove manual RowBackground styles to let Theme take over. -->
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="Players" Binding="{Binding PlayerCountDisplay}" Width="80"/>
                <DataGridTextColumn Header="FPS" Binding="{Binding Fps, StringFormat=N0}" Width="60"/>
                <DataGridTextColumn Header="Ping" Binding="{Binding Ping}" Width="60"/>
                <DataGridTextColumn Header="Job ID (Server Instance)" Binding="{Binding Id}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- footer / Actions -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <ui:Button Content="Set as Launch Target" Click="BtnSetTarget_Click" Width="150" Appearance="Primary" Icon="{ui:SymbolIcon Target24}"/>
        </StackPanel>
    </Grid>
</ui:FluentWindow>
