<Window x:Class="RobloxAccountManager.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:RobloxAccountManager.ViewModels"
        mc:Ignorable="d"
        Title="Settings" Height="300" Width="500"
        Background="{StaticResource Brush.Background.Dark}"
        WindowStartupLocation="CenterOwner">

    <Window.DataContext>
        <vm:SettingsViewModel/>
    </Window.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Settings" FontSize="20" FontWeight="Bold" Foreground="{StaticResource Brush.Text.Primary}" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1">
            <!-- Custom Roblox Path -->
            <TextBlock Text="Custom Roblox Versions Path (Fishstrap/Bloxstrap)" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,0,0,5"/>
            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Text="{Binding CustomRobloxPath, UpdateSourceTrigger=PropertyChanged}" Padding="5"/>
                <Button Grid.Column="1" Content="Browse" Command="{Binding BrowseCustomPathCommand}" Width="75" Margin="10,0,0,0"/>
            </Grid>

            <!-- Download Path -->
            <TextBlock Text="Download Location" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,0,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Text="{Binding DownloadPath, UpdateSourceTrigger=PropertyChanged}" Padding="5"/>
                <Button Grid.Column="1" Content="Browse" Command="{Binding BrowseDownloadPathCommand}" Width="75" Margin="10,0,0,0"/>
            </Grid>
        </StackPanel>

        <Button Grid.Row="2" Content="Close" IsCancel="True" HorizontalAlignment="Right" Width="80" Click="BtnClose_Click"/>
    </Grid>
</Window>
