<Application x:Class="RobloxAccountManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:c="clr-namespace:RobloxAccountManager.Converters"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>

            <!-- Custom / Legacy Resources -->
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <c:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
            
            <SolidColorBrush x:Key="Brush.Background.Dark" Color="#202020"/>
            <SolidColorBrush x:Key="Brush.Surface.Dark" Color="#2D2D30"/>
            <SolidColorBrush x:Key="Brush.Border.Dark" Color="#3E3E42"/>
            <SolidColorBrush x:Key="Brush.Text.Primary" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="Brush.Text.Secondary" Color="#CCCCCC"/>
            <SolidColorBrush x:Key="Brush.Accent" Color="#0078D7"/>
            <SolidColorBrush x:Key="Brush.Accent.Hover" Color="#1084E3"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
